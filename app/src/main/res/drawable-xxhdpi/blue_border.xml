<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="270"
                android:endColor="@color/col_1ee0df"
                android:startColor="@color/col_1ee0df" />
            <corners android:radius="28dp" />
            <padding
                android:bottom="@dimen/size1dp"
                android:left="@dimen/size1dp"
                android:right="@dimen/size1dp"
                android:top="@dimen/size1dp"
                />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
            <corners android:radius="28dp" />
            <size
                android:width="50dp"
                android:height="50dp"/>
        </shape>
    </item>
</layer-list>